BLUEJAY := /home/seankent/bluejay
TOOLS := $(BLUEJAY)/tools
BUILD := $(BLUEJAY)/build
IP := $(BLUEJAY)/ip
TB := $(BLUEJAY)/tb

#===============================================
# Rules
#===============================================
#===============================
# all
#===============================
all: $(IP) 

#===============================
# $(IP) 
#===============================
.PHONY: $(IP)
$(IP): 
	$(MAKE) -C $@

#===============================
# clean 
#===============================
.PHONY: clean 
clean: clean_ip

#===============================
# clean_ip 
#===============================
.PHONY: clean_ip 
clean_ip:
	$(MAKE) -C $(IP) clean

