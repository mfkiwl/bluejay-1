#===============================================
# Project Directories 
#===============================================
BLUEJAY := /home/seankent/bluejay
TOOLS := $(BLUEJAY)/tools
BUILD := $(BLUEJAY)/build
SRC := $(BLUEJAY)/src
TB := $(BLUEJAY)/tb

#===============================================
# Sources/Targets 
#===============================================
SRC := src 
TB := tb
SIM := sim
		
#===============================================
# Rules
#===============================================
#===============================
# all
#===============================
.PHONY: all 
all: $(SRC) $(TB)

#===============================
# $(SRC) 
#===============================
.PHONY: $(SRC) 
$(SRC):
	$(MAKE) -C $@

#===============================
# $(TB) 
#===============================
.PHONY: $(TB) 
$(TB):
	$(MAKE) -C $@

#===============================
# $(SIM) 
#===============================
.PHONY: $(SIM) 
$(SIM):
	$(MAKE) -C $@


#===============================
# clean 
#===============================
.PHONY: clean 
clean: 
	$(MAKE) -C $(SRC) clean
	$(MAKE) -C $(TB) clean

